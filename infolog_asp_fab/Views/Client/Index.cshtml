@model IEnumerable<infolog_asp_fab.Models.Client>

<h1>Liste des Clients</h1>
<a class="btn btn-primary" asp-action="Create">Ajouter un Client</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Téléphone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.IdClients</td>
                <td>@client.FirstName</td>
                <td>@client.LastName</td>
                <td>@client.Email</td>
                <td>@client.PhoneNumber</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@client.IdClients" class="btn btn-warning">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@client.IdClients" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
